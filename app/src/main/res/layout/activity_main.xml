<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="qianfeng.tablayoutfragmentapplication.MainActivity">
    <!--
        app:tabMode="scrollable" 设置TabLayout的显示模式
        app:tabTextColor="@color/colorPrimary" 设置默认文本颜色
        app:tabSelectedTextColor="#ff0101" 选中文本颜色
        app:tabIndicatorColor="#deff05" 设置指示器的颜色
        app:tabIndicatorHeight="" 设置指示器的高度
          app:tabIndicatorHeight="2dp"
        -->
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        app:tabGravity="center"
        app:tabIndicatorColor="#deff05"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#ff0101"
        app:tabTextColor="#f333"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
